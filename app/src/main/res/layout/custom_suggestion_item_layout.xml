<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llSuggestionItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/ivSuggestionItem_Image"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_centerInParent="true"
                android:layout_margin="5dp"
                android:layout_weight="1.7"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvSuggestionItem_Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/open_sans_semi_bold"
                    android:maxLines="2"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/tvSuggestionItem_Desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/open_sans_regular"
                    android:maxLines="2"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tvSuggestionItem_Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/open_sans_regular"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tvSuggestionItem_Count"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:layout_margin="3dp"
                    android:background="@drawable/circle_layout"
                    android:fontFamily="@font/open_sans_semi_bold"
                    android:gravity="center"
                    android:maxLength="3"
                    android:orientation="vertical"
                    android:textColor="@color/colorWhite"
                    android:visibility="gone" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

    </LinearLayout>

</LinearLayout>